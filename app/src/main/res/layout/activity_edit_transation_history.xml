<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_edit"
    tools:context=".EditTransactionHistory">

    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_button2"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:onClick="backButtonOnClick"
            app:srcCompat="?attr/actionModeCloseDrawable" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="280dp"
            android:layout_height="59dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Transaction History"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout9"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/linearLayout9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView61"
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:layout_marginTop="10dp"
                android:text="From : "
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_textview_with_corner_color"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fromname_transactionhistory_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:text="Ujjwal Mishra"
                    android:textAlignment="center"
                    android:textColor="#0ed145"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/fromphone_transactionhistory_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:text="(8887627311)"
                    android:textAlignment="center"
                    android:textColor="#0ed145"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView62"
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:layout_marginTop="10dp"
                android:text="To : "
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_textview_with_corner_color"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/toname_transactionhistory_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:text="Ujjwal Mishra"
                    android:textAlignment="center"
                    android:textColor="#0ed145"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tophone_transactionhistory_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:text="(8887627311)"
                    android:textAlignment="center"
                    android:textColor="#0ed145"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView63"
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:text="Amount : "
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="122dp" />

            <TextView
                android:id="@+id/amount_transactionhistory_textview"
                android:layout_width="271dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:background="@drawable/round_textview_with_corner_color"
                android:gravity="center"
                android:maxLines="1"
                android:text="35"
                android:textColor="#0ed145"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="125dp"
                tools:layout_editor_absoluteY="123dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView64"
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:layout_marginTop="25dp"
                android:text="Description : "
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="122dp" />

            <TextView
                android:id="@+id/description_transactionhistory_textview"
                android:layout_width="271dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/round_textview_with_corner_color"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:textColor="#0ed145"
                android:textSize="15sp"
                tools:layout_editor_absoluteX="125dp"
                tools:layout_editor_absoluteY="123dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/createdby_transactionhistory_textview"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="Created on 12/05/22 16:22 by Ujjwal Mishra"
                android:textAlignment="center"
                android:textColor="#FF0000"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="122dp" />
        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/done_transactionhistory_button"
        android:layout_width="318dp"
        android:layout_height="80dp"
        android:backgroundTint="#DB32F8"
        android:onClick="backButtonOnClick"
        android:text="Done"
        android:textSize="30dp"
        app:cornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout8" />

</androidx.constraintlayout.widget.ConstraintLayout>