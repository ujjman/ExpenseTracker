<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout_all_payments"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_item_payment"
    android:orientation="horizontal"
    android:layout_marginBottom="7dp"
    android:layout_marginLeft="13dp"
    android:layout_marginRight="13dp"
    android:layout_marginTop="3dp"
    android:layout_height="105dp">

    <LinearLayout
        android:layout_width="206dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/people_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:maxLines="1"
            android:text="Ujjwal to Gauransh"
            android:textColor="#000C5D"
            android:textSize="22sp"
            app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Created on 23/08/22 1:31am"
            android:textColor="#ADADAD"
            android:textSize="14sp"
            android:maxLines="1"
            app:autoSizeTextType="uniform"
            />
        <TextView
            android:id="@+id/creator_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Created on 23/08/22 1:31am"
            android:textColor="#ADADAD"
            android:textSize="14sp"
            android:maxLines="1"
            app:autoSizeTextType="uniform"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="35dp"
        android:layout_marginRight="10dp"
        android:layout_width="125dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/amount"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#F63EA5"
            android:layout_marginTop="8dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="1dp"
            android:text="Rs. 134"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            app:autoSizeTextType="uniform"
            />

    </LinearLayout>

</LinearLayout>